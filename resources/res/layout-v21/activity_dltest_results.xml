<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center" android:id="@+id/load_image" android:padding="80dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="150dp" android:layout_weight="1"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/result_head" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView android:layout_width="90dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:translationZ="5dp" android:elevation="5dp">
            <LinearLayout android:orientation="vertical" android:background="#4fcf78" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20sp" android:textColor="@color/white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Correct"/>
                <TextView android:textSize="20sp" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/correct_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_weight="1" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:translationZ="5dp" android:elevation="5dp">
            <LinearLayout android:orientation="vertical" android:background="#f5efe7" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20sp" android:textColor="@color/black" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Score"/>
                <TextView android:textSize="20sp" android:textColor="@color/black" android:layout_gravity="center" android:id="@+id/score_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5/5"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="90dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:translationZ="5dp" android:elevation="5dp">
            <LinearLayout android:orientation="vertical" android:background="#e44c44" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20sp" android:textColor="@color/white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wrong"/>
                <TextView android:textSize="20sp" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/wrong_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/result_recycler" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"/>
</LinearLayout>
