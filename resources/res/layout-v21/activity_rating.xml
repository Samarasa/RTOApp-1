<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp" android:translationZ="20dp" android:elevation="10dp" app:cardBackgroundColor="@color/white" app:cardCornerRadius="10dp" app:cardElevation="0dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="17sp" android:textColor="#000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/rating_head" android:textAlignment="center"/>
            <TextView android:textSize="17sp" android:textColor="#777" android:id="@+id/rating_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:text="@string/rating_text"/>
            <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RatingBar android:theme="@style/RatingBar" android:layout_gravity="center" android:id="@+id/ratingBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:numStars="5" android:stepSize="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="10dp">
                <Button android:textColor="@color/white" android:id="@+id/later" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Cancel" android:layout_weight="1" android:backgroundTint="@color/black"/>
                <Button android:visibility="invisible" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Button" android:layout_weight="1"/>
                <Button android:textColor="@color/white" android:id="@+id/rate_us" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Rate us" android:layout_weight="1" android:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
