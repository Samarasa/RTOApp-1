<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:id="@+id/card_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" app:cardBackgroundColor="@android:color/white">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="20dp" android:textColor="@color/colorPrimary" android:id="@+id/textView" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="VEHICLE NUMBER"/>
                <TextView android:textSize="12dp" android:id="@+id/textView1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="NAME OF THE OWNER, VEHICLE TYPE, FUEL TYPE"/>
            </LinearLayout>
            <ImageView android:id="@+id/delete" android:padding="8dp" android:layout_width="45dp" android:layout_height="45dp" android:src="@drawable/ic_delete_black_24dp" android:layout_weight="0"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
