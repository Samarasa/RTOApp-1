<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="@color/colorAccent" android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="Thanks for using our app." android:layout_weight="0" android:textAlignment="center"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_weight="0">
                <Button android:textColor="@color/white" android:id="@+id/rate_us" android:background="@drawable/rounded_rect_orange" android:layout_width="0dp" android:layout_height="40dp" android:text="Rate us" android:layout_weight="1"/>
                <Button android:visibility="invisible" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Button" android:layout_weight="1"/>
                <Button android:textColor="@color/white" android:id="@+id/exit" android:background="@drawable/rounded_rect_dark" android:layout_width="0dp" android:layout_height="40dp" android:text="Exit" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/our_apps" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                    <TextView android:gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Our Apps" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
                    <TextView android:textColor="@color/colorAccent" android:id="@+id/view_all" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View All" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="vertical" android:background="@drawable/rounded_rect_orange" android:padding="2dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                                <ImageView android:id="@+id/one" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="2dp" android:src="@drawable/loading" android:layout_weight="1"/>
                                <ImageView android:id="@+id/two" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="2dp" android:src="@drawable/loading" android:layout_weight="1"/>
                                <ImageView android:id="@+id/three" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="2dp" android:src="@drawable/loading" android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
                                <ImageView android:id="@+id/four" android:visibility="gone" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="2dp" android:src="@drawable/loading" android:layout_weight="1"/>
                                <ImageView android:id="@+id/five" android:visibility="gone" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="2dp" android:src="@drawable/loading" android:layout_weight="1"/>
                                <ImageView android:id="@+id/six" android:visibility="gone" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="2dp" android:src="@drawable/loading" android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
                                <ImageView android:id="@+id/seven" android:visibility="gone" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="2dp" android:src="@drawable/loading" android:layout_weight="1"/>
                                <ImageView android:id="@+id/eight" android:visibility="gone" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="2dp" android:src="@drawable/loading" android:layout_weight="1"/>
                                <ImageView android:id="@+id/nine" android:visibility="gone" android:layout_width="0dp" android:layout_height="100dp" android:layout_margin="2dp" android:src="@drawable/loading" android:layout_weight="1"/>
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <FrameLayout android:id="@+id/ad_exit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/fb_exit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
