<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/snews_image" android:layout_width="match_parent" android:layout_height="190dp" android:layout_marginTop="3dp"/>
            <TextView android:textSize="20sp" android:textColor="@color/colorPrimary" android:id="@+id/snews_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:textAlignment="center"/>
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/snews_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:textAlignment="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
